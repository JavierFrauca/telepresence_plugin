{
  "name": "telepresence-gui",
  "displayName": "Telepresence GUI",
  "description": "Graphical interface for managing Telepresence in Kubernetes",
  "version": "1.0.102",
  "publisher": "JavierFrauca",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JavierFrauca/telepresence_plugin"
  },
  "bugs": {
    "url": "https://github.com/JavierFrauca/telepresence_plugin/issues"
  },
  "homepage": "https://github.com/JavierFrauca/telepresence_plugin#readme",
  "readme": "%config.path.readme%",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "kubernetes",
    "telepresence",
    "debug",
    "microservices",
    "azure",
    "kubelogin"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "telepresence",
          "title": "Telepresence",
          "icon": "activity-icon.png"
        }
      ]
    },
    "views": {
      "telepresence": [
        {
          "id": "telepresenceNamespace",
          "name": "Namespace Connection",
          "when": "true",
          "icon": "activity-icon.png"
        },
        {
          "id": "telepresenceInterceptions",
          "name": "Active Interceptions",
          "when": "true",
          "icon": "activity-icon.png"
        },
        {
          "id": "telepresenceStatus",
          "name": "Telepresence Status",
          "when": "true",
          "icon": "activity-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "telepresence.refreshNamespace",
        "title": "Refresh Namespace Connection",
        "category": "Telepresence",
        "icon": "$(refresh)"
      },
      {
        "command": "telepresence.refreshInterceptions",
        "title": "Refresh Active Interceptions",
        "category": "Telepresence",
        "icon": "$(refresh)"
      },
      {
        "command": "telepresence.refreshTelepresenceStatus",
        "title": "Refresh Telepresence Status",
        "category": "Telepresence",
        "icon": "$(refresh)"
      },
      {
        "command": "telepresence.openGui",
        "title": "Open Telepresence GUI",
        "category": "Telepresence",
        "icon": "$(window)"
      },
      {
        "command": "telepresence.connectNamespace",
        "title": "Connect to Namespace",
        "category": "Telepresence",
        "icon": "$(plug)"
      },
      {
        "command": "telepresence.disconnectNamespace",
        "title": "Disconnect from Namespace",
        "category": "Telepresence",
        "icon": "$(debug-stop)"
      },
      {
        "command": "telepresence.interceptTraffic",
        "title": "Intercept Traffic",
        "category": "Telepresence",
        "icon": "$(target)"
      },
      {
        "command": "telepresence.connect",
        "title": "Connect Session",
        "category": "Telepresence",
        "icon": "$(plug)"
      },
      {
        "command": "telepresence.disconnect",
        "title": "Disconnect Session",
        "category": "Telepresence",
        "icon": "$(debug-stop)"
      },
      {
        "command": "telepresence.installTelepresence",
        "title": "Install Telepresence",
        "category": "Telepresence",
        "icon": "$(cloud-download)"
      },
      {
        "command": "telepresence.installKubelogin",
        "title": "Install Kubelogin",
        "category": "Telepresence",
        "icon": "$(cloud-download)"
      },
      {
        "command": "telepresence.installKubectl",
        "title": "Install Kubectl",
        "category": "Telepresence",
        "icon": "$(cloud-download)"
      },
      {
        "command": "telepresence.deploymentActions",
        "title": "Acciones de Deployment",
        "category": "Telepresence"
      },
      {
        "command": "telepresence.scaleDeployment",
        "title": "Escalar Deployment",
        "category": "Telepresence",
        "icon": "$(arrow-up)"
      },
      {
        "command": "telepresence.restartDeployment",
        "title": "Reiniciar Deployment",
        "category": "Telepresence",
        "icon": "$(refresh)"
      },
      {
        "command": "telepresence.deletePod",
        "title": "Eliminar Pod",
        "category": "Telepresence",
        "icon": "$(trash)"
      },
      {
        "command": "telepresence.loginToKubernetes",
        "title": "Login to Kubernetes",
        "category": "Telepresence",
        "icon": "$(key)"
      },
      {
        "command": "telepresence.auditI18n",
        "title": "Audit Internationalization",
        "category": "Telepresence",
        "icon": "$(globe)"
      },
      {
        "command": "telepresence.disconnectFromTree",
        "title": "Disconnect Session from Tree",
        "category": "Telepresence",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "telepresence.connectNamespace",
          "when": "view == telepresenceNamespace",
          "group": "navigation@1"
        },
        {
          "command": "telepresence.refreshNamespace",
          "when": "view == telepresenceNamespace",
          "group": "navigation@2"
        },
        {
          "command": "telepresence.interceptTraffic",
          "when": "view == telepresenceInterceptions",
          "group": "navigation@1"
        },
        {
          "command": "telepresence.refreshInterceptions",
          "when": "view == telepresenceInterceptions",
          "group": "navigation@2"
        },
        {
          "command": "telepresence.refreshTelepresenceStatus",
          "when": "view == telepresenceStatus",
          "group": "navigation@1"
        },
        {
          "command": "telepresence.scaleDeployment",
          "when": "view == telepresenceStatus",
          "group": "navigation@2"
        },
        {
          "command": "telepresence.restartDeployment",
          "when": "view == telepresenceStatus",
          "group": "navigation@3"
        },
        {
          "command": "telepresence.deletePod",
          "when": "view == telepresenceStatus",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "telepresence.disconnectFromTree",
          "when": "view == telepresenceView && viewItem == session",
          "group": "inline"
        },
        {
          "command": "telepresence.showSessionDetails",
          "when": "view == telepresenceView && viewItem == session"
        },
        {
          "command": "telepresence.copySessionInfo",
          "when": "view == telepresenceView && viewItem == session"
        },
        {
          "command": "telepresence.disconnectFromTree",
          "when": "view == telepresenceInterceptions && viewItem == active-session",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "telepresence.openGui",
          "when": "true"
        },
        {
          "command": "telepresence.connectNamespace",
          "when": "true"
        },
        {
          "command": "telepresence.disconnectNamespace",
          "when": "true"
        },
        {
          "command": "telepresence.interceptTraffic",
          "when": "true"
        },
        {
          "command": "telepresence.connect",
          "when": "true"
        },
        {
          "command": "telepresence.disconnect",
          "when": "true"
        },
        {
          "command": "telepresence.installTelepresence",
          "when": "true"
        },
        {
          "command": "telepresence.installKubelogin",
          "when": "true"
        },
        {
          "command": "telepresence.installKubectl",
          "when": "true"
        },
        {
          "command": "telepresence.loginToKubernetes",
          "when": "true"
        },
        {
          "command": "telepresence.auditI18n",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Telepresence",
      "properties": {
        "telepresence.generalRefreshInterval": {
          "type": "number",
          "default": 15,
          "description": "General refresh interval in seconds (tools, context, namespaces)"
        },
        "telepresence.telepresenceRefreshInterval": {
          "type": "number",
          "default": 5,
          "description": "Telepresence status refresh interval in seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-i18n",
    "watch": "tsc -watch -p ./",
    "copy-i18n": "powershell -Command \"if (!(Test-Path -Path ./out/i18n)) { New-Item -ItemType Directory -Path ./out/i18n -Force }; Copy-Item ./src/i18n/*.json ./out/i18n/ -Force\"",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:coverage": "jest --config jest.config.json --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
